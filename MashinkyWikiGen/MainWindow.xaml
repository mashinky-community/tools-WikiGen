            <!--Special-->
            <TextBlock Grid.Row="13" Grid.Column="0" Text="Pollution"/>
            <TextBox   Grid.Row="13" Grid.Column="2" Text="{Binding LinkPollution, Mode=TwoWay}" Style="{StaticResource TextBoxStyle1}" Margin="2"/>
