            <TextBox   Grid.Row="11" Grid.Column="5" Text="{Binding LimestoneMID, Mode=TwoWay}" Style="{StaticResource TextBoxStyle1}" Margin="2"/>
            <TextBox   Grid.Row="11" Grid.Column="6" Text="{Binding LimestoneMaterial.LinkedPage, Mode=TwoWay}" Style="{StaticResource TextBoxStyle1}" Margin="2"/>
            <!--Cement-->
