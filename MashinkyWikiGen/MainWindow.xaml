            <TextBox   Grid.Row="4" Grid.Column="2" Text="{Binding IronToken.LinkedPage, Mode=TwoWay}" Style="{StaticResource TextBoxStyle1}" Margin="2"/>
            <!--Diesel-->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="{Binding DieselToken.Name, Mode=OneTime}" Margin="2"/>
            <TextBox   Grid.Row="5" Grid.Column="1" Text="{Binding DieselTID, Mode=TwoWay}" Style="{StaticResource TextBoxStyle1}" Margin="2"/>
            <TextBox   Grid.Row="5" Grid.Column="2" Text="{Binding DieselToken.LinkedPage, Mode=TwoWay}" Style="{StaticResource TextBoxStyle1}" Margin="2"/>
