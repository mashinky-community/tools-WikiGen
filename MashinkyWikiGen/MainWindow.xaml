            <TextBlock Grid.Row="16" Grid.Column="0" Text="Operating Cost"/>
            <TextBox   Grid.Row="16" Grid.Column="2" Text="{Binding LinkOperatingCost, Mode=TwoWay}" Style="{StaticResource TextBoxStyle1}" Margin="2"/>


            <Button Grid.Row="17" Grid.Column="2" Content="Generate vehicles" Name="GenerateVehiclesButton" Click="GenerateVehiclesButton_Click" Margin="2"/>
            <Button Grid.Row="17" Grid.Column="4" Content="Generate buildings" Name="GenerateBuildingsButton" Click="GenerateBuildingsButton_Click" Margin="2"/>
        </Grid>
       
    </Grid>



</Window>
