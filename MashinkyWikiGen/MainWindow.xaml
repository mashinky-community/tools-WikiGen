            <TextBox   Grid.Row="12" Grid.Column="5" Text="{Binding CementMID, Mode=TwoWay}" Style="{StaticResource TextBoxStyle1}" Margin="2"/>
            <TextBox   Grid.Row="12" Grid.Column="6" Text="{Binding CementMaterial.LinkedPage, Mode=TwoWay}" Style="{StaticResource TextBoxStyle1}" Margin="2"/>
            <!--Passengers-->
            <TextBlock Grid.Row="13" Grid.Column="4" Text="{Binding PassengersMaterial.Name, Mode=OneTime}" Margin="2"/>
            <TextBox   Grid.Row="13" Grid.Column="5" Text="{Binding PassengersMID, Mode=TwoWay}" Style="{StaticResource TextBoxStyle1}" Margin="2"/>
            <TextBox   Grid.Row="13" Grid.Column="6" Text="{Binding PassengersMaterial.LinkedPage, Mode=TwoWay}" Style="{StaticResource TextBoxStyle1}" Margin="2"/>
